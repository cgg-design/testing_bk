def doSmoke(){
    bat '''
    pip install pytest
    cd Py_Fixtures
    python -m pytest -v -x test_smoke01.py
    python -m pytest -v -x test_module01.py
    cd ..\\
    '''
}


def directory = "${env.WORKSPACE}/testing_bk"

pipeline {
    agent any
    stages {
      stage('Smoke_test') {
         steps{          
          doSmoke()
          
